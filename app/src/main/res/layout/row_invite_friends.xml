<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="inviteFriendsRowModel" type="com.houssameddinesapplication.app.modules.invitefriends.data.model.InviteFriendsRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowvector"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearRowellipsefive"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageEllipseFive"
                android:layout_height="@dimen/_50pxh"
                android:layout_width="@dimen/_50pxh"
                android:scaleType="centerCrop" circular="@{true}"
                imageRes="@{@drawable/img_ellipse5}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse5"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnkevinallsrub"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtKevinAllsrub"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{inviteFriendsRowModel.txtKevinAllsrub}"
                    style="@style/txtIntersemibold20" tools:text="@string/lbl_kevin_allsrub"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtYourefriends"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{inviteFriendsRowModel.txtYourefriends}"
                    style="@style/txtInterregular14_1" tools:text="@string/msg_your_e_friends"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:background="@drawable/rectangle_bg_deep_purple_a200_radius_7"
            android:id="@+id/btnVector"
            android:layout_height="@dimen/_24pxh"
            android:layout_width="@dimen/_24pxh"
            android:paddingHorizontal="@dimen/_6pxh"
            android:paddingVertical="@dimen/_6pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_vector_white_A700" tools:ignore="ContentDescription"/>
    </LinearLayout>
</layout>
